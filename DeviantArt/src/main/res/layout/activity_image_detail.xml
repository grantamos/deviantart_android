<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ImageDetailActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/detail_image_view"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/image_detail_header">

        <ImageView
            android:id="@+id/user_icon_image_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/user_icon_margin"
            android:layout_marginRight="@dimen/user_icon_margin"
            android:background="@drawable/user_icon_background"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_icon_image_view"
            android:paddingTop="45dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/accent"/>

        <TextView
            android:id="@+id/username"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/user_icon_image_view"
            android:textAllCaps="true"
            android:textColor="@color/accent"/>

    </RelativeLayout>

</RelativeLayout>
